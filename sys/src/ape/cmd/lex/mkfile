</$objtype/mkfile
DIRS=doc libfl flex 
APEXPROOT=../../../../..
FLEXSRC=$APEXPROOT/sys/src/external/flex/src

all:V:
	for (i in $DIRS)
		@{ cd $i; mk }

install:V:
	for (i in $DIRS)
		@{ cd $i; mk $target }
	cp $FLEXSRC/FlexLexer.h $APEXPROOT/sys/include/ape/

clean:V:
	for (i in $DIRS)
		@{ cd $i; mk $target }

nuke:V:
	for (i in $DIRS)
		@{ cd $i; mk $target }
	rm -f $APEXPROOT/sys/include/ape/FlexLexer.h

