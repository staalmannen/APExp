APE=../../ape
<$APE/config
APEXPROOT=../../../..


#some stuff needs flex and byacc to build
DIRS=\
# parsing/editing source etc \
	lex\
	yacc\
	awk\
	sed\
# often invoked during make \
	make\
	m4\
	gettext\
# core utilities \
	base\
	pdksh\
	pcregrep\
	iconv\
	expr\
# archivers \
	bzip2\
	clzip\
	minigzip\
#	pax\
	unace\
	unarj\
	unrar\
	xz\
# languages and transpilers \
	lua\
# dev tools \
	diff\
	patch\
# always last :) \
	celebrate_finish

BIN=$APEXPROOT/$objtype/bin/ape
<$APEXPROOT/sys/src/cmd/mkmany

all:V:	$DIRS

install:V:	install.dir

installall:V:	installall.dir

clean:V:	clean.dir

nuke:V:		nuke.dir

%.dir:V:
	for (i in $DIRS) @{
		cd $i
		echo '----'$i'----'
		mk $stem
	}

$DIRS:V:
	for (i in $target) @{
		cd $i
		echo '----'$i'----'
		mk all
	}


